%section.content-header
  %ol.breadcrumb
    %li
      %a{:href => "#"}
        %i.fa.fa-dashboard
        Casos
    %li.active Listado

.container-fluid.mt-10
  .row
    .col-lg-12
      .box.slice-box
        .box-body.no-padding.table-responsive
          %table.table
            %thead
              %tr
                %th #
                %th Nombre
                %th Email
                %th Fecha
                %th Asesor
                %th
                %th
            %tbody
              = render 'listing'
        .box-footer.text-center
          = paginate @cases, theme: 'bootstrap', window: 3
