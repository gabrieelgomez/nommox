%section.content-header
  %h1
    - if policy(:city).new?
      = link_to new_city_path do
        %button.btn.btn-primary
          Nuevo
  %ol.breadcrumb
    %li
      %a{:href => "#"}
        %i.fa.fa-dashboard
        Departamentos o Provincias
    %li.active Listado

.container-fluid.mt-10
  .row
    .col-lg-12
      .box.slice-box
        .box-body.no-padding.table-responsive
          %table.table
            %thead
              %tr
                %th #
                %th Nombre
                %th Pa√≠s
                %th
                %th
            %tbody
              = render 'listing'
        .box-footer.text-center

          = paginate @cities, theme: 'bootstrap', window: 3
