- @provinces.each_with_index do |province, index|
  %tr
    %td= index + 1
    %td= province.name
    %td= province.city.name
    %td= province.city.country.name
    - if policy(:province).show?
      %td
        = link_to province_path(province) do
          %button.btn.btn-primary.btn-sm Ver
    - if policy(:province).edit?
      %td
        = link_to edit_province_path(province) do
          %button.btn.btn-primary.btn-sm Editar
    - if policy(:province).destroy?
      %td
        = link_to province_path(province), method: :delete, data: { confirm: '¿Estás seguro?' } do
          %button.btn.btn-danger.btn-sm Eliminar
