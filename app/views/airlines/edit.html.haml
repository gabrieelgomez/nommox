%section.content-header
  %h1
    = link_to airlines_path do
      %button.btn.btn-primary
        Atrás
  %ol.breadcrumb
    %li
      %a{:href => "#"}
        %i.fa.fa-dashboard
        Aerolíneas
    %li
      %a{:href => "#"}
        %i.fa.fa-dashboard
