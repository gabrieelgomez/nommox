.box-body.table-responsive
  = simple_form_for [@flight] do |f|
    .form-group
      = f.input :departure_airport_code, label: 'Código Aeropuerto de Salida', input_html: { class: 'form-control' }
    .form-group
      = f.input :arrival_airport_code, label: 'Código Aeropuerto de LLegada', input_html: { class: 'form-control' }
    .form-group
      = f.input :departure_airport_name, label: 'Nombre Aeropuerto de Salida', input_html: { class: 'form-control' }
    .form-group
      = f.input :arrival_airport_name, label: 'Nombre Aeropuerto de LLegada', input_html: { class: 'form-control' }
    .form-group
      = f.input :date, label: 'Fecha', input_html: { class: 'form-control' }
    .form-group
      -# = f.input :hour, label: 'Hora', input_html: { class: 'form-control' }
    .form-group
      = f.input :airline_id, collection: @airlines, include_blank: false, label: 'Aerolínea', input_html: { class: 'form-control' }
    .form-group
      = f.input :flight_number, label: 'Número de vuelo', input_html: { class: 'form-control' }
    .form-group.pull-right
      = f.submit 'GUARDAR', class: 'btn btn-primary'
