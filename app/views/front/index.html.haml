!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Nommox
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body.hold-transition.skin-blue.sidebar-mini
    .wrapper
      %header.main-header
        = link_to root_path, class: 'logo' do
          %span.logo-lg
            %b Nommox
        %nav.navbar.navbar-static-top
          %a.sidebar-toggle{"data-toggle" => "push-menu", :href => "#", :role => "button"}
            %span.sr-only Toggle navigation
      %aside.main-sidebar
        %section.sidebar
          %ul.sidebar-menu{ 'data-widget': 'tree' }
            - if !current_user
              %li.treeview
                = link_to login_path do
                  %i.fa.fa-dashboard
                  %span Iniciar session
            %li.treeview
              = link_to users_path do
                %i.fa.fa-user
                %span Usuarios
            %li.treeview
              %a{:href => "#"}
                %i.fa.fa-map
                %span Ubicaciones
                %span.pull-right-container
                  %i.fa.fa-angle-left.pull-right
              %ul.treeview-menu
                %li
                  = link_to countries_path do
                    %i.fa.fa-circle-o
                    Paises
                %li
                  = link_to cities_path do
                    %i.fa.fa-circle-o
                    Ciudades
                %li
                  = link_to provinces_path do
                    %i.fa.fa-circle-o
                    Provincias
            %li.treeview
              = link_to airlines_path do
                %i.fa.fa-plane-departure
                %span Aerol√≠neas
            %li.treeview
              = link_to carousel_configurations_path do
                %i.fa.fa-font
                %span Carrusel
            %li.treeview
              = link_to case_causes_path do
                %i.fa.fa-align-justify
                %span Causas de casos
            %li.treeview
              = link_to logout_path do
                %i.fa.fa-sign-out-alt
                %span Logout
      .content-wrapper
        %section.content
          = bootstrap_flash
          = yield
