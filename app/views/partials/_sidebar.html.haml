.wrapper
  %header.main-header
    = link_to root_path, class: 'logo' do
      %span.logo-lg
        .pull-left
          = image_tag('Icon-App-20x20@3x.png', class: 'img')
          %b{ style: 'margin-left: 10px'} Nommox
      %span.logo-mini
        .pull-left
          = image_tag('Icon-App-20x20@3x.png', class: 'img', style: 'width: 40px; height: 40px; margin-left: 5px')
    %nav.navbar.navbar-static-top
      %a.sidebar-toggle{"data-toggle" => "push-menu", :href => "#", :role => "button"}
        %span.sr-only Toggle navigation
  %aside.main-sidebar
    %section.sidebar
      %ul.sidebar-menu{ 'data-widget': 'tree' }
        - if policy(:user).index?
          %li.treeview
            = link_to users_path do
              %i.fa.fa-user
              %span Usuarios
        - if policy(:ubication).index?
          %li.treeview
            %a{:href => "#"}
              %i.fa.fa-map
              %span Ubicaciones
              %span.pull-right-container
                %i.fa.fa-angle-left.pull-right
            %ul.treeview-menu
              %li
                = link_to countries_path do
                  %i.fa.fa-circle-o
                  Paises
              %li
                = link_to cities_path do
                  %i.fa.fa-circle-o
                  Departamentos o Provincias
              %li
                = link_to provinces_path do
                  %i.fa.fa-circle-o
                  Provincias
        - if policy(:airline).index?
          %li.treeview
            = link_to airlines_path do
              %i.fa.fa-plane
              %span Aerolíneas
        - if policy(:carousel_configuration).index?
          %li.treeview
            = link_to carousel_configurations_path do
              %i.fa.fa-font
              %span Carrusel
        - if policy(:case_cause).index?
          %li.treeview
            = link_to case_causes_path do
              %i.fa.fa-align-justify
              %span Causas de casos
        - if policy(:flight).index?
          %li.treeview
            = link_to flights_path do
              %i.fa.fa-plane
              %span Vuelos
        - if policy(:letter).index?
          %li.treeview
            = link_to letters_path do
              %i.fa.fa-envelope
              %span Cartas
        - if policy(:case).index?
          %li.treeview
            = link_to cases_path do
              %i.fa.fa-gavel
              %span Casos
        - if policy(:case_status).index?
          %li.treeview
            = link_to case_status_index_path do
              %i.fa.fa-check
              %span Estados de los casos
        - if policy(:chat).index?
          %li.treeview
            = link_to chat_index_path, target: '_blank' do
              %i.fa.fa-comments
              %span Chat
        - if policy(:smtp_setting).index?
          %li.treeview
            = link_to smtp_settings_path do
              %i.fa.fa-comments
              %span Configuración del Email
        %li.treeview
          = link_to logout_path do
            %i.fa.fa-sign-out
            %span Cerrar Sesión
  .content-wrapper
    %section.content
      = bootstrap_flash
      = yield

:javascript
  $('.sidebar-toggle').click(function() {
    $('body').toggleClass('sidebar-collapse sidebar-open')
  })
