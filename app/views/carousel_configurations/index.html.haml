%section.content-header
  %h1
    = link_to new_carousel_configuration_path do
      %button.btn.btn-primary
        Nuevo
  %ol.breadcrumb
    %li
      %a{:href => "#"}
        %i.fa.fa-dashboard
        Carrusel
    %li.active Listado

.container-fluid
  .row
    .col-lg-12
      %h3.box-title Textos (#{@carousel_configurations.count})
      .box.slice-box
        .box-body.no-padding
          %table.table
            %thead
              %tr
                %th #
                %th Texto
                %th
                %th
            %tbody
              = render 'listing'
