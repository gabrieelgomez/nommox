- @carousel_configurations.each_with_index do |carousel_configuration, index|
  %tr
    %td= index + 1
    %td= raw carousel_configuration.text
    - if policy(:carousel_configuration).show?
      %td
        = link_to carousel_configuration_path(carousel_configuration) do
          %button.btn.btn-primary.btn-sm Ver
    - if policy(:carousel_configuration).edit?
      %td
        = link_to edit_carousel_configuration_path(carousel_configuration) do
          %button.btn.btn-primary.btn-sm Editar
    - if policy(:carousel_configuration).destroy?
      %td
        = link_to carousel_configuration_path(carousel_configuration), method: :delete, data: { confirm: '¿Estás seguro?' } do
          %button.btn.btn-danger.btn-sm Eliminar
